using System;
class Program
{
    static void Main(string[] args)
    {
        Console.Write("x = ");
        int x = Convert.ToInt32(Console.ReadLine());

        for (int i = 0; i <= x; i++)
        {
            int j = 0;
            while (j < i)
            {
                Console.Write("*");
                j++;
            }          

            Console.WriteLine();
        }
    }
}
